<Window x:Class="EscolaApp.Views.FuncionarioView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Funcionários"
        Height="450"
        Width="830">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>

        <!-- FORM -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">

            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Nome"/>
                <TextBox Width="180" Text="{Binding Nome}"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Cargo"/>
                <TextBox Width="140" Text="{Binding Cargo}"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Email"/>
                <TextBox Width="180" Text="{Binding Email}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Bottom">
                <Button Content="Salvar"
                        Width="80"
                        Margin="0,0,5,0"
                        Command="{Binding SalvarCommand}"/>

                <Button Content="Editar"
                        Width="80"
                        Margin="0,0,5,0"
                        Command="{Binding EditarCommand}"/>

                <Button Content="Excluir"
                        Width="80"
                        Command="{Binding ExcluirCommand}"/>
            </StackPanel>
        </StackPanel>

        <!-- GRID -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Funcionarios}"
                  SelectedItem="{Binding FuncionarioSelecionado}"
                  AutoGenerateColumns="False" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}"/>
                <DataGridTextColumn Header="Cargo" Binding="{Binding Cargo}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
