<Window x:Class="EscolaApp.Views.AlunoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Alunos"
        Height="450"
        Width="969">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="293*"/>
            <ColumnDefinition Width="78*"/>
            <ColumnDefinition Width="309*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- FORM -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.ColumnSpan="3">

            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Nome"/>
                <TextBox Width="180" Text="{Binding Nome}"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Email"/>
                <TextBox Width="180" Text="{Binding Email}"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Nascimento"/>
                <DatePicker SelectedDate="{Binding DataNascimento}"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Curso"/>
                <ComboBox Width="150"
                          ItemsSource="{Binding Cursos}"
                          SelectedItem="{Binding CursoSelecionado}"
                          DisplayMemberPath="Nome"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
            VerticalAlignment="Bottom">

                <Button Content="Salvar"
            Width="80"
            Margin="0,0,5,0"
            Command="{Binding SalvarCommand}" Height="24"/>

                <Button Content="Editar"
            Width="80"
            Margin="0,0,5,0"
            Command="{Binding EditarCommand}"/>

                <Button Content="Excluir"
            Width="80"
            Command="{Binding ExcluirCommand}"/>
            </StackPanel>

        </StackPanel>

        <!-- GRID -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Alunos}"
                  SelectedItem="{Binding AlunoSelecionado}"
                  AutoGenerateColumns="False" Grid.ColumnSpan="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                <DataGridTextColumn Header="Curso" Binding="{Binding NomeCurso}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

