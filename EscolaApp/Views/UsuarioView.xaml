<Window x:Class="EscolaApp.Views.UsuarioView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Usuários"
        Height="400"
        Width="579">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- FORM -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">

            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Usuário"/>
                <TextBox Width="150" Text="{Binding Username}"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Senha"/>
                <PasswordBox x:Name="txtSenha" Width="37"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Bottom">
                <Button Content="Salvar"
                        Width="70"
                        Margin="0,0,5,0"
                        Command="{Binding SalvarCommand}"
                        Click="SalvarSenha_Click"/>

                <Button Content="Editar"
                        Width="70"
                        Margin="0,0,5,0"
                        Command="{Binding EditarCommand}"/>

                <Button Content="Excluir"
                        Width="70"
                        Command="{Binding ExcluirCommand}"/>
            </StackPanel>
        </StackPanel>

        <!-- GRID -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Usuarios}"
                  SelectedItem="{Binding UsuarioSelecionado}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Usuário" Binding="{Binding Username}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

