<Window x:Class="EscolaApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Escola-ERP"
        Height="450"
        Width="800">

    <!-- 🔹 RECURSOS (ESTILOS) -->
    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10"
                                      ShadowDepth="2"
                                      Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- 🔹 LAYOUT PRINCIPAL -->
    <DockPanel>

        <!-- MENU SUPERIOR -->
        <Grid DockPanel.Dock="Top" Background="#F5F5F5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- MENU ESQUERDA -->
            <Menu Grid.Column="0">
                <MenuItem Header="Cadastro">
                    <MenuItem Header="Cursos" Click="AbrirCursos_Click"/>
                    <MenuItem Header="Alunos" Click="AbrirAlunos_Click"/>
                    <MenuItem Header="Funcionários" Click="AbrirFuncionarios_Click"/>
                    <MenuItem Header="Trocar Senha" Click="TrocarSenha_Click"/>
                    <MenuItem x:Name="menuUsuarios"
                              Header="Usuários"
                              Click="AbrirUsuarios_Click"/>
                </MenuItem>

                <MenuItem Header="Sair" Click="Logout_Click"/>
            </Menu>

            <!-- USUÁRIO LOGADO (DIREITA) -->
            <TextBlock Grid.Column="1"
                       VerticalAlignment="Center"
                       Margin="10,0,15,0"
                       FontWeight="SemiBold"
                       Text="{Binding UsuarioLogado}"/>
        </Grid>

        <!-- DASHBOARD -->
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- TÍTULO -->
            <TextBlock Text="Bem-vindo ao Sistema Escolar"
                       FontSize="22"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- CARDS -->
            <UniformGrid Grid.Row="1"
                         Columns="3"
                         HorizontalAlignment="Center">

                <!-- CARD CURSOS -->
                <Border Style="{StaticResource CardStyle}">
                    <Button Click="AbrirCursos_Click"
                            Background="Transparent"
                            BorderThickness="0">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="📚"
                                       FontSize="36"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Cursos"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- CARD ALUNOS -->
                <Border Style="{StaticResource CardStyle}">
                    <Button Click="AbrirAlunos_Click"
                            Background="Transparent"
                            BorderThickness="0">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="🎓"
                                       FontSize="36"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Alunos"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- CARD FUNCIONÁRIOS -->
                <Border Style="{StaticResource CardStyle}">
                    <Button Click="AbrirFuncionarios_Click"
                            Background="Transparent"
                            BorderThickness="0">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="👩‍🏫"
                                       FontSize="36"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Funcionários"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

            </UniformGrid>
        </Grid>

    </DockPanel>
</Window>
